= simple_form_for @group, remote: true do |f|
  = f.input :banner_title, label: 'banner header'
  = f.input :banner_description, label: 'banner description'
  = f.input :background, label: 'header image'
  = f.input :name, label: 'signup form name'
  = f.input :description, label: 'Signup form description'
  = f.input :visible, label: 'visible to public'
  = f.input :bypass_welcome_page, label: 'bypass wecome page'
  = f.submit 'Submit', class: 'btn-primary pull-left'
  = link_to 'cancel', '#', class: 'cancel-form btn-primary pull-left', remote: true
  .clearfix
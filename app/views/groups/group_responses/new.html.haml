.question.response-form
  %h3= @group.name
  %p.text-left= @group.description
  .clearfix
  - unless current_user
    .login-suggest.text-left
      Already have an account,
      = link_to 'try sign in', new_user_session_path, style: 'color: blue'
  - if @group.questions.count == 0
    %h3.message
      This site is not ready yet
  - else
    = render partial: 'form'
- if post.user == current_user
  .pin-select.pull-right
    - if current_user.owned_groups.count == 0
      = link_to 'Pin a site', groups_path, class: 'fbt-select-nil'
    - else
      = link_to 'Pin a site', '#', class: 'project-select', remote: true
    .clearfix
    .project-select-container.d-none
      = form_for [:select_project, post], method: :put, html: {class: 'project-select-form', remote: true} do |f|
        = f.select :project_id, [['none', nil]] + current_user.owned_groups.map{|q| [q.display_name, q.id]}, html: {class: 'project-select-box'}
        .clearfix
        = f.submit 'pin'
        .clearfix
    .pin-project-ack
    .clearfix
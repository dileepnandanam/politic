.my-space.col-lg-4.col-sm-6.col-12.pull-left
  .responses-container.questions-container
    %h3= "My #{AppConst::GroupType.pluralize}"
    - @groups.each do |group|
      = render partial: 'group', locals: {group: group, actions: true}
    - current_user.joined_groups.each do |group|
      = render partial: 'group', locals: {group: group, actions: false}
  .new-question
  .questions-actions
    = link_to "New #{AppConst::GroupType.camelize}", new_group_path, class: 'add-question', remote: true

  - if false
    %h3= "Other Projects"
    - @other_groups.each do |group|
      = render partial: 'group', locals: {group: group, actions: false}
  
.my-space.col-lg-8.col-sm-6.col-12.pull-left
  %h3
    = "Find #{AppConst::GroupType.pluralize.camelize}"
  .search
    = text_field_tag 'search', nil, placeholder: 'search', data: {url: search_groups_path(page: 1)}
  .clearfix
  .questions
    = render partial: 'groups/groups', locals: {groups: Group.order('created_at DESC').paginate(page: 1, per_page: 5)}

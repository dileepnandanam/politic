.question.response-form
  = link_to 'configure', dashboard_survey_path(@survey), class: 'pull-right configure'
  .clearfix
  - if current_user.blank? && !@survey.anonymous?
    = render partial: 'authorize'
  .pull-left
    %h3= @survey.name
    %p= @survey.description
  .clearfix
  - if @survey.questions.count > 0
    = render partial: 'form'
  - else
    %h3.message
      This survey is not ready to answer

.admin-item
  = link_to new_quick_poll_quick_poll_response_path(quick_poll) do
    %h3.clickable.black= quick_poll.display_name
  %p.black
    = quick_poll.description
  - if actions
    .question-actions
      .pull-left
        = link_to 'Edit', edit_quick_poll_path(quick_poll), remote: true, class: 'edit-question'
      .pull-left
        = link_to 'delete', quick_poll_path(quick_poll), method: 'delete', remote: true, class: 'delete-question'
      .pull-left
        = link_to 'dashboard', dashboard_quick_poll_path(quick_poll), class: 'dashboard'
  .clearfix
  = link_to 'Cast Vote', new_quick_poll_quick_poll_response_path(quick_poll), class: 'preview-submit'
  .clearfix
  .question-edit-form-container

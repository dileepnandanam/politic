= simple_form_for([@quick_poll, @quick_poll_response], html:{remote: true, class: 'quick-poll-form'}) do |f|
  .quickpoll
    = f.input :question_id, as: :radio_buttons, collection: @quick_poll.questions.map{|q| [q.id, "#{q.text}(#{@quick_poll.quick_poll_responses.where(question_id: q.id).count('distinct quick_poll_responses.user_id')})"]}, label_method: :second, value_method: :first, label: @quick_poll.description
  = f.submit 'Submit', class: 'btn-primary'
  .clearfix
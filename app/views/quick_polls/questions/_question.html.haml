.question{id: "sequence_#{question.id}"}
  .quick-poll-question-handle
  .question-text.clickable
    = question.text
  .count
    = "#{@quick_poll.quick_poll_responses.where(question_id: question.id).count('distinct quick_poll_responses.user_id')} people voted"
  .question-actions
    .pull-left
      = link_to 'Edit', edit_quick_poll_question_path(@quick_poll, question), remote: true, class: 'edit-question'
    .pull-left
      = link_to 'delete', quick_poll_question_path(@quick_poll, question), method: 'delete', remote: true, class: 'delete-question'
    .clearfix
  .question-edit-form-container
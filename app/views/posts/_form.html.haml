= f.input :title
= f.input :text
- if f.object.persisted?
  = f.input :background, label: 'Banner image'
  = f.input :blur_banner
  = f.input :extra_style
  = f.input :enable_comment_vote, label: 'enable comment and votes', input_html: {class: 'post-checkbox'}
.clearfix
= f.submit :post, class: 'btn-primary pull-left'

= simple_form_for(@post, remote: true, html: { class: 'post-form' }) do |f|
  = f.input :title
  = f.input :text, label: 'Content'
  = f.input :enable_comment_vote, label: 'enable comment and votes'
  .clearfix
  = f.submit :post, class: 'btn-primary', data: { disable_with: false }
  = link_to 'cancel', '#', class: 'cancel-form btn-primarys', remote: true
.clearfix
    }
    .post-title h1 a {
      color: <%= post.style[:text_color] %>;
    }
    .phone-number .name {
      color: <%= post.style[:text_color] %>;
    }
    .phone-number .number a {
      color: <%= post.style[:text_color] %>;
    }
    .video-caption {
      color: <%= post.style[:text_color] %>;
    }
    .galery h2, .galery .post-text .text {
      color: <%= post.style[:text_color] %>;

<% unless post.style.nil? %>
  <style>
    .post-title h1 {
      color: <%= post.style[:text_color] %>;
    }
    .post-title h1 a {
      color: <%= post.style[:text_color] %>;
    }
    .phone-number .name {
      color: <%= post.style[:text_color] %>;
    }
    .phone-number .number a {
      color: <%= post.style[:text_color] %>;
    }
    .video-caption {
      color: <%= post.style[:text_color] %>;
    }
    .galery h2, .galery .post-text .text {
      color: <%= post.style[:text_color] %>;
    }
    .post-text, label, .post-text a {
      color: <%= post.style[:text_color] %>;
    }
    
    .picture .inner p {
      color: <%= post.style[:text_color] %>;
    }
    .response-form, .response-form p, .response-form h3  {
      color: <%= post.style[:text_color] %>; 
    }
    .access-restricted text-left {
      color: <%= post.style[:text_color] %>;
    }
    .comment-actions a {
      color: <%= post.style[:text_color] %>;
      border: 1px solid <%= post.style[:text_color] %>;
    }
    .survey-question label {
      color: <%= post.style[:text_color] %> !important;
    }

    .post {
      background-color: <%= post.style[:background_color] %>;
    }
    .access-restricted {
      background-color: <%= post.style[:background_color] %>;
    }
    .response-form, .response-form p, .response-form h3  {
      background-color: <%= post.style[:background_color] %>;
    }
    .comment .user-details, .comment .comment-body {
      color: <%= post.style[:text_color] %> !important;
    }
    .comment {
      border: 1px solid <%= post.style[:text_color] %>;
    }
    .expand-comment {
      color: <%= post.style[:text_color] %> !important;
    }
    .configure {
      color: <%= post.style[:text_color] %> !important;      
    }
    .chats-container h3 {
      color: <%= post.style[:text_color] %> !important;
      background-color: <%= post.style[:background_color] %>
    }

  </style>
<% end %>
.comments
  - comments.each do |c|
    = render partial: 'posts/comments/comment', locals: {expand: false, comment: c, new: false}
  .more-responses
    - if comments.next_page
      = link_to 'View more', post_comments_path(post, page: (params[:page].present? ? params[:page].to_i + 1 : 2)), remote: true, class: 'view-more'

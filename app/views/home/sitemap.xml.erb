<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<% if false %>
<url>
  <loc>https://www.palkad.com/</loc>
  <changefreq>daily</changefreq>
  <priority>0.1</priority>
</url>
<% end -%>

  <% Post.where(group_id: nil).each do |p| -%>
    <url>
      <loc>https://www.palkad.com/<%= p.id %></loc>
      <% t = p.updated_at.to_s.split %>
      <lastmod><%= "#{t[0]}T#{t[1]}+00:00" %></lastmod>
      <changefreq>daily</changefreq>
      <priority>0.5</priority>
    </url>
  <% end -%>

  <% (1..Post.where(group_id: nil).count).each do |p| -%>
    <url>
      <loc>https://www.palkad.com/posts/boo?page=<%= p %></loc>
      <changefreq>daily</changefreq>
      <priority>0.5</priority>
    </url>
  <% end -%>
</urlset>

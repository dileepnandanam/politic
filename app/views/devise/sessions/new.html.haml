.response-form
  %h2 Log in
  = simple_form_for(User.new, url: signin_users_path) do |f|
    .form-inputs
      = f.input :email,                      
        required: false,                     
        autofocus: true,                     
        input_html: { autocomplete: "email" }
      = f.input :password,                              
        required: false,                                
        input_html: { autocomplete: "current-password" }
      = f.input :remember_me, as: :boolean
    .form-actions
      = f.button :submit, "Log in"
    = link_to 'Join', new_user_registration_path